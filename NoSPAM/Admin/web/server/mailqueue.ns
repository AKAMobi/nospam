function show()
{
	global $bWritable;
	
	if(isset($_GET["page"]))
		$page = intval($_GET["page"]);
	else
		$page = 1;
	if($page < 1)
		$page = 1;
	if(isset($_GET["pagenum"]))
		$pagenum = intval($_GET["pagenum"]);
	else
		$pagenum = PAGENUM;
	if($pagenum < 1)
		$pagenum = PAGENUM;
	
	$start = ($page - 1)*$pagenum+1;
	if(($ret=wi("MailQueue_getList $start $pagenum",$result)) != 0){
		echo "获取邮件队列时出现错误，错误代码$ret";
		return;
	}
	
	$total = intval($result[0]);
	if($total == 0)
		$pages = 1;
	else
		$pages = $total%$pagenum? intval($total/$pagenum)+1:$total/$pagenum;
	if($page > $pages)
		$page = $pages;
	$queue = array_slice($result,1);
	unset($result);
?>
