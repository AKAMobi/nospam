function del()
{
	global $bWritable;
	
	if(!$bWritable){
		echo "你无权进行修改操作";
		return;
	}
	
	$id = $_REQUEST["id"];
		
	if(is_array($id)){
		if(count($id) > 0){
			$args = implode(" ",$id);
		}
	}else{
		$args = $id;
	}
	
	if(($ret=wi("MailQueue_delID $args",$result)) != 0){
		echo "删除邮件队列记录时出现错误，错误代码$ret";
	}else{
		header("Location: ".$_SERVER['PHP_SELF']."?page=".$_REQUEST["page"]."&pagenum=".$_REQUEST["pagenum"]);
	}
}

function dellall()
{
	global $bWritable;
	
	if(!$bWritable){
		echo "你无权进行修改操作";
		return;
	}

	if(($ret=wi("MailQueue_delAll",$result)) != 0)
		echo "删除邮件队列记录时出现错误，错误代码$ret";
	else
		echo "清空成功！";
}
