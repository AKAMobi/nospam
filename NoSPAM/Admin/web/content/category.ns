function save()
{
	global $Category;

	$id = $_POST["id"];
	$name = $_POST["name"];
	$note = $_POST["note"];
	if(!is_numeric($id))
		die("分类编号必须为数字！");
	if($_POST["type"]!="modify")
		if(array_key_exists($id,$Category))
			die("相同的分类编号已存在！");

	$Category[$id] = array($name,$note);	
	savefile();
	header("Location: category.ns");
}
