function del()
{
	global $Category;
	$ids = $_REQUEST["id"];

	if(is_array($ids)){
		if(count($ids) > 0)
			foreach($ids as $id)
				unset($Category[$id]);
	}else{
		unset($Category[$ids]);
	}

	savefile();
	header("Location: category.ns");
}

function savefile()
{
	global $Category;

	ksort($Category,SORT_NUMERIC);
	$str = "";
	if(count($Category) > 0){
		foreach($Category as $key=>$value){
			$str .= "$key\t$value[0]\t$value[1]\n";
		}
	}
	savetofile(trim($str),Category);
}

