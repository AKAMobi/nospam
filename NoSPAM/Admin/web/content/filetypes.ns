function del()
{
	global $FileType;
	$ids = $_REQUEST["id"];
	if(!adminPerm(PERM_ADMIN_WRITE))
		die("你无权进行修改操作");

	if(is_array($ids)){
		if(count($ids) > 0)
			foreach($ids as $id)
				unset($FileType[$id]);
	}else{
		unset($FileType[$ids]);
	}

	savefile();
	header("Location: filetypes.ns");
}

function savefile()
{
	global $FileType;
	if(!adminPerm(PERM_ADMIN_WRITE))
		die("你无权进行修改操作");

	ksort($FileType,SORT_NUMERIC);
	$str = "";
	if(count($FileType) > 0){
		foreach($FileType as $key=>$value){
			if($key>=150)
				$str .= "$key\t$value[0]\t$value[1]\n";
		}
	}
	savetofile(trim($str),FILETYPE);
}

