function save()
{
	global $FileType;
	if(!adminPerm(PERM_ADMIN_WRITE))
		die("你无权进行修改操作");

	$id = $_POST["id"];
	$name = $_POST["name"];
	$note = $_POST["note"];
	if(!is_numeric($id))
		die("分类编号必须为数字！");
	if($_POST["type"]!="modify"){
		if(array_key_exists($id,$FileType))
			die("相同的分类编号已存在！");
	}

	$FileType[$id] = array($name,$note);	
	savefile();
	header("Location: filetypes.ns");
}
