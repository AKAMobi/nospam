function save()
{
	global $List,$sList,$spamconf,$columni,$sOption;
	
	switch($_POST['type']){
		case 'switch':
		$spamconf->setParam($sOption,$_POST[$sOption]);
		$spamconf->save();
		if(($ret=wi("reset_".$_GET["option"],$result))==0)
			header("Location: ".$_SERVER['PHP_SELF']."?option=".$_GET["option"]);
		else
			echo "修改失败，错误代码：".$ret;
		return;
		break;
		case 'modify':
		unset($List[$_POST['oKey']]);
		break;
		default:
		if(array_key_exists($_POST['key'],$List))
			echo "相同的$column已存在！";
			exit();
	}

	$List[$_POST['key']] = $_POST['note'];
	$spamconf->setList($sList,$List);
	$spamconf->save();
	if(($ret=wi("reset_".$_GET["option"],$result))==0)
		header("Location: ".$_SERVER['PHP_SELF']."?option=".$_GET["option"]);
	else
		echo "修改失败，错误代码：".$ret;
}
