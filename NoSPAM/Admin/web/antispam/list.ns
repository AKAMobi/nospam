function del()
{
	global $spamconf,$List,$sList;
	
	$key = $_REQUEST["key"];
	if(is_array($key)){
		if(count($key) > 0){
			foreach($key as $tmp)
				unset($List[$tmp]);
		}
	}else{
		unset($List[$key]);
	}
	$spamconf->setList($sList,$List);
	$spamconf->save();
	if(($ret=wi("reset_".$_GET["option"],$result))==0)
		header("Location: ".$_SERVER['PHP_SELF']."?option=".$_GET["option"]);
	else
		echo "修改失败，错误代码：".$ret;
}

