switch($_GET["action"]){
	case "add":
	DrawAddTable("WhiteIPConcurList","DynamicEngine","IP白名单","ＩＰ地址",(bool)adminPerm(PERM_ADMIN_WRITE));
	break;
	case "del":
	DeleteData("WhiteIPConcurList","DynamicEngine",(bool)adminPerm(PERM_ADMIN_WRITE));
	if(($ret=wi("reset_".$_GET["option"],$result))!=0){
		echo "修改失败，错误代码：".$ret;
		exit(-1);
	}
	DrawListTable("WhiteIPConcurList","DynamicEngine","IP白名单","ＩＰ地址",(bool)adminPerm(PERM_ADMIN_WRITE));
	break;
	case "modify":
	DrawModifyTable("WhiteIPConcurList","DynamicEngine","IP白名单","ＩＰ地址",(bool)adminPerm(PERM_ADMIN_WRITE));
	break;
	case "save":
	SaveData("WhiteIPConcurList","DynamicEngine","ＩＰ地址",(bool)adminPerm(PERM_ADMIN_WRITE));
	if(($ret=wi("reset_".$_GET["option"],$result))!=0){
		echo "修改失败，错误代码：".$ret;
		exit(-1);
	}
	DrawListTable("WhiteIPConcurList","DynamicEngine","IP白名单","ＩＰ地址",(bool)adminPerm(PERM_ADMIN_WRITE));
	break;
	default:
	DrawListTable("WhiteIPConcurList","DynamicEngine","IP白名单","ＩＰ地址",(bool)adminPerm(PERM_ADMIN_WRITE));
