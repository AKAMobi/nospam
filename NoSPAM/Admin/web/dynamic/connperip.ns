	die("您没有访问该网页的权限。");

if($_POST["submit"]=="提交"){
	if(!adminPerm(PERM_ADMIN_WRITE))
		die("你无权进行更改操作");
	if(!is_numeric($_POST["ConnPerIP"])) die("请输入数字");
	$spamconf->setParam("ConnPerIP",$_POST["ConnPerIP"],"DynamicEngine");
	$spamconf->save();
	if(($ret=wi("reset_ConnPerIP",$result))==0)
		echo "修改成功";
	else
		echo "修改失败，错误代码：".$ret;
}else{
